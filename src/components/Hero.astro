---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="hero is-fullheight">
    <div class="hero-body" style="z-index:1000">
        <div class="">
            <h1 class="title has-text-success is-size-1 text-shadow-danger"> {title}</h1>
            <p class="subtitle has-text-success is-size-1 text-shadow-danger">{subtitle}</p>
        </div>
    </div>
</section>