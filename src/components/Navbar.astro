---
interface Props {
  navItems: {
    path: string;
    title: string;
  }[];
}

const {navItems} = Astro.props;
---

<nav class="navbar has-background-danger" role="navigation" aria-label="main navigation">
    <div class="navbar-start">
        {
            navItems.map((item) => (
                <a class="navbar-item has-text-white" href={item.path}>{item.title}</a>
            ))
        }
    </div>
</nav>