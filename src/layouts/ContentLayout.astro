---
import BaseLayout from '@layouts/BaseLayout.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<BaseLayout name={name}>
    <section class="section">
        <div class="container">
            <slot/>
        </div>
    </section>
</BaseLayout>

<ViewTransitions />